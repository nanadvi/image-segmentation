function [outputImg, meanColors] = quantized_RGB(origImg, k)
    inputImg = im2double(origImg);
    [r, c, ~] = size(inputImg); 
    reshapedImg = reshape(inputImg, r*c, 3);
    [idx, meanColors] = kmeans(reshapedImg, 3);
    outputImg = zeros(size(reshapedImg));
    for labels = 1:k
        outputImg(idx == labels
    end 
    
    
end
function [outputImg, meanColors] = quantized_RGB_Wrong(origImg, k)
    inputImg = im2double(origImg);
    outputImg = zeros(size(inputImg));
    meanColors= zeros(k,3);
    for c = 1:3
        [outputImg(:, :, c), ~] = quantized_RGB_helper(inputImg(:,:,c),k);
    end
end

function [outPutChannel, meanColors] = quantized_RGB_helper(origImg, k)
    [r, c] = size(origImg); 
    outPutChannel = zeros(r, c); 
    [idx, meanColors] = kmeans(origImg(:), k);
    idR = reshape(idx, r, c); 
    for labels = 1:k
        outPutChannel(idR == labels) = uint8(meanColors(labels));
        disp(meanColors(labels));
    end
end


